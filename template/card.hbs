{{#each this}}
<li class="film__card film__link">
    <img src="{{poster_path}}" alt="{{title}}" class="film__img" data-source="{{backdrop_path}}" />
    <div class="film__scribe">
      <p class="film__title">
        {{title}}
      </p>
      <div>
        <ul class="film__genre">
          {{#each genre}}
          <li>{{this.name}}</li>
          {{/each}}
        </ul>
        <p class="film__genre separator">|</p>
        <p class="film__genre">
          {{release_date}}
        </p>
        <p class="film__vote_average is-hidden">
          {{vote_average}}
        </p>
      </div>
    </div>
</li>
{{/each}}

